<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Coupon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Edit Coupon</h2>
        
        <form id="editCouponForm" action="/admin/edit-coupon/<%= coupon._id %>?_method=PUT" method="POST" novalidate>
            <div class="mb-3">
                <label for="name" class="form-label">Coupon Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= coupon.name %>" required>
                <div class="invalid-feedback">Coupon name is required.</div>
            </div>

            <div class="mb-3">
                <label for="expireOn" class="form-label">Expiry Date</label>
                <input type="date" class="form-control" id="expireOn" name="expireOn" value="<%= coupon.expireOn.toISOString().split('T')[0] %>" required>
                <div class="invalid-feedback">Please select a valid expiry date.</div>
            </div>

            <div class="mb-3">
                <label for="offerPrice" class="form-label">Offer Percentage</label>
                <input type="number" class="form-control" id="offerPrice" name="offerPrice" value="<%= coupon.offerPrice %>" required min="0" max="100">
                <div class="invalid-feedback">Offer percentage must be between 0 and 100.</div>
            </div>

            <div class="mb-3">
                <label for="minimumPrice" class="form-label">Minimum Price for Discount</label>
                <input type="number" class="form-control" id="minimumPrice" name="minimumPrice" value="<%= coupon.minimumPrice %>" required min="0">
                <div class="invalid-feedback">Minimum price must be greater than zero.</div>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="isList" name="isList" <%= coupon.isList ? 'checked' : '' %>>
                <label class="form-check-label" for="isList">List this coupon</label>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <button type="button" class="btn btn-secondary">
                <a class="text-white text-decoration-none" href="/admin/coupon-management">Cancel</a>
            </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('editCouponForm').addEventListener('submit', function (event) {
            const form = event.target;
            const name = document.getElementById('name');
            const expireOn = document.getElementById('expireOn');
            const offerPrice = document.getElementById('offerPrice');
            const minimumPrice = document.getElementById('minimumPrice');

            let isValid = true;

            if (name.value.trim() === '') {
                name.classList.add('is-invalid');
                isValid = false;
            } else {
                name.classList.remove('is-invalid');
            }

            const today = new Date().toISOString().split('T')[0];
            if (expireOn.value === '' || expireOn.value < today) {
                expireOn.classList.add('is-invalid');
                isValid = false;
            } else {
                expireOn.classList.remove('is-invalid');
            }

            const offerValue = parseInt(offerPrice.value, 10);
            if (isNaN(offerValue) || offerValue < 0 || offerValue > 100) {
                offerPrice.classList.add('is-invalid');
                isValid = false;
            } else {
                offerPrice.classList.remove('is-invalid');
            }

            const minPriceValue = parseFloat(minimumPrice.value);
            if (isNaN(minPriceValue) || minPriceValue <= 0) {
                minimumPrice.classList.add('is-invalid');
                isValid = false;
            } else {
                minimumPrice.classList.remove('is-invalid');
            }

            if (!isValid) {
                event.preventDefault();
                event.stopPropagation();
            }
        });

        const fields = document.querySelectorAll('#editCouponForm input');
        fields.forEach(field => {
            field.addEventListener('input', function () {
                if (field.checkValidity()) {
                    field.classList.remove('is-invalid');
                }
            });

            if (field.type === 'number') {
                field.addEventListener('keydown', function (e) {
                    if (e.key === '-' || e.key === 'e' || e.key === '+') {
                        e.preventDefault();
                    }
                });

                field.addEventListener('input', function () {
                    if (field.value < 0) {
                        field.value = '';
                    }
                });
            }
        });
    </script>
</body>
</html>
