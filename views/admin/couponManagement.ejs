<!DOCTYPE html>
<html lang="en">
  <%- include("../../views/partials/admin/header") %>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coupon Management</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
    }

    .coupon-container {
      width: 80%;
      margin-left: 340px;
      margin-top: 20px;
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .coupon-container h1 {
      text-align: center;
      color: #333;
      margin-bottom: 20px;
    }

    .coupon-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    .coupon-table th, .coupon-table td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #ddd;
    }

    .coupon-table th {
      background-color: #333;
      color: #fff;
    }

    .coupon-table tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    .coupon-table tr:hover {
      background-color: #f1f1f1;
    }

    button {
      padding: 8px 12px;
      margin: 0 5px;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      opacity: 0.9;
    }

    button:first-of-type {
      background-color: #4CAF50; /* Edit button */
    }

    button:last-of-type {
      background-color: #f44336; /* Delete button */
    }

    .no-coupons {
      text-align: center;
      color: #999;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include("../../views/partials/admin/sidebar") %>
<div class="coupon-container">
  <h1>Coupon Management</h1>
  <div> <button><a class="text-white" href="/admin/create-coupon">Create Coupon</a></button></div>

  <% if (coupons.length > 0) { %>
    <table class="coupon-table">
      <thead>
        <tr>
          <th>Coupon Name</th>
          <th>Created On</th>
          <th>Expires On</th>
          <th>Offer Price</th>
          <th>Minimum Price</th>
          <th>Is Listed</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% coupons.forEach(coupon => { %>
          <tr>
            <td><%= coupon.name %></td>
            <td><%= new Date(coupon.createdOn).toLocaleDateString() %></td>
            <td><%= new Date(coupon.expireOn).toLocaleDateString() %></td>
            <td><%= coupon.offerPrice %>%</td>
            <td><%= coupon.minimumPrice %></td>
            <td><%= coupon.isList ? 'Yes' : 'No' %></td>
            <td>
              <button onclick="editCoupon('<%= coupon._id %>')">Edit</button>
              <button onclick="deleteCoupon('<%= coupon._id %>')">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="no-coupons">No coupons added yet.</p>
  <% } %>
</div>

</div>
</div>

<script>
  function editCoupon(couponId) {
    window.location.href = `/admin/edit-coupon/${couponId}`;
  }

  function deleteCoupon(couponId) {
    if (confirm("Are you sure you want to delete this coupon?")) {
      fetch(`/admin/delete-coupon/${couponId}`, {
        method: 'GET'
      }).then(response => {
        if (response.ok) {
          window.location.reload();
        } else {
          alert("Failed to delete the coupon.");
        }
      });
    }
  }
</script>

</body>
</html>
