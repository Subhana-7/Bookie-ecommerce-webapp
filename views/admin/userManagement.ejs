<%- include("../../views/partials/admin/header") %>
<%- include("../../views/partials/admin/sidebar") %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Inter', sans-serif;
        }
        .sidebar-offset {
            margin-left: 250px;
        }
        .card-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 20px;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0,123,255,0.075);
            transition: background-color 0.3s ease;
        }
        .search-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .action-buttons {
            display: flex;
            gap: 8px;
        }
        .swal2-container {
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
        }
        .swal2-popup {
            margin: auto !important;
            width: auto;
            max-width: 90%;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 sidebar-offset">
                <div class="pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">User Management</h1>
                </div>

                <div class="card-container">
                    <div class="search-container">
                        <div class="col-md-6">
                            <form method="GET" action="/admin/users" class="d-flex">
                                <input 
                                    type="text" 
                                    class="form-control me-2" 
                                    name="search" 
                                    value="<%= search %>" 
                                    placeholder="Search users by name or email..."
                                >
                                <button type="submit" class="btn btn-primary">Search</button>
                            </form>
                        </div>

                        <div>
                            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addUserModal">
                                Add New User
                            </button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < data.length; i++) { %>
                                    <tr>
                                        <td><%= (currentPage - 1) * 5 + (i + 1) %></td>
                                        <td><%= data[i].name %></td>
                                        <td><%= data[i].email %></td>
                                        <td><%= data[i].phone %></td>
                                        <td>
                                            <span class="badge <%= data[i].isBlocked ? 'bg-danger' : 'bg-success' %>">
                                                <%= data[i].isBlocked ? 'Blocked' : 'Active' %>
                                            </span>
                                        </td>
                                        <td class="action-buttons">
                                            <% if (!data[i].isBlocked) { %>
                                                <a href="/admin/blockUser?id=<%= data[i]._id %>" class="btn btn-sm btn-outline-danger">
                                                    Block
                                                </a>
                                            <% } else { %>
                                                <a href="/admin/unblockUser?id=<%= data[i]._id %>" class="btn btn-sm btn-outline-success">
                                                    Unblock
                                                </a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <% for(let i = 1; i <= totalPages; i++){ %>
                                <li class="page-item <%= (i === currentPage) ? "active" : "" %>">
                                    <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </main>
        </div>
    </div>

    <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>User addition functionality to be implemented</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            const status = urlParams.get('status');
            
            if (status === 'blocked') {
                Swal.fire({
                    title: "User Blocked",
                    text: "The user has been successfully blocked.",
                    icon: "success",
                    confirmButtonText: "OK",
                    backdrop: true
                });
            } else if (status === 'unblocked') {
                Swal.fire({
                    title: "User Unblocked",
                    text: "The user has been successfully unblocked.",
                    icon: "success",
                    confirmButtonText: "OK",
                    backdrop: true
                });
            } else if (status === 'error') {
                Swal.fire({
                    title: "Error",
                    text: "There was an error processing the request.",
                    icon: "error",
                    confirmButtonText: "OK",
                    backdrop: true
                });
            }
        });
    </script>
</body>
</html>