<%-include("../../views/partials/admin/header")%>
<%-include("../../views/partials/admin/sidebar")%>

<style>
  .swal2-container {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
}

.swal2-popup {
    margin: auto !important; 
    width: auto;
    max-width: 90%; 
}

</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>

<!-- Main Content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">User Management</h1>
  </div>

  <!-- Search Bar -->
  <div class="row mb-3">
    <div class="col-md-4">
      <!-- Wrap search in a form -->
      <form method="GET" action="/admin/userManagement">
        <input type="text" class="form-control search-bar" name="search" value="<%= search %>" placeholder="Search users by name or email...">
      </form>
    </div>
    <div class="col-md-8 text-end">
      <button class="btn btn-success">Add New User</button>
    </div>
  </div>

  <!-- User Table -->
  <div class="row">
    <div class="col-12">
      <table class="table user-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Loop through the users -->
          <% for (let i = 0; i < data.length; i++) { %>
            <tr>
              <!-- Calculate user index based on pagination -->
              <td><%= (currentPage - 1) * 5 + (i + 1) %></td> <!-- Display index as user number -->
              <td><%= data[i].name %></td>
              <td><%= data[i].email %></td>
              <td><%= data[i].phone %></td>

              <!-- Display Block/Unblock button -->
              <td>
                <% if (!data[i].isBlocked) { %>
                  <a href="/admin/blockUser?id=<%= data[i]._id %>" class="btn btn-success">block</a>
                <% } else { %>
                  <a href="/admin/unblockUser?id=<%= data[i]._id %>" class="btn btn-danger">unblock</a>
                <% } %>

                <!-- Edit and Delete buttons -->
                <button class="btn btn-action btn-action-edit">Edit</button>
                <button class="btn btn-action btn-action-delete">Delete</button>
              </td>
            </tr> 
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <div class="container mt-3">
    <nav aria-label="page navigation">
      <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
        <% for(let i = 1; i <= totalPages; i++){ %>
          <li class="page-item <%= (i === currentPage) ? "active" : "" %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</main>
</div>
</div>




<script>
 document.addEventListener("DOMContentLoaded", function() {
  // Check URL for the status parameter
  const urlParams = new URLSearchParams(window.location.search);
  const status = urlParams.get('status');

  // Display appropriate SweetAlert based on the status
  if (status === 'blocked') {
    Swal.fire({
      title: "User Blocked",
      text: "The user has been successfully blocked.",
      icon: "success",
      confirmButtonText: "OK",
      backdrop: true // Ensure a backdrop to center the alert visually
    });
  } else if (status === 'unblocked') {
    Swal.fire({
      title: "User Unblocked",
      text: "The user has been successfully unblocked.",
      icon: "success",
      confirmButtonText: "OK",
      backdrop: true
    });
  } else if (status === 'error') {
    Swal.fire({
      title: "Error",
      text: "There was an error processing the request.",
      icon: "error",
      confirmButtonText: "OK",
      backdrop: true
    });
  }
});

</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
