<!DOCTYPE html>
<html>
<head>
    <title>Order Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #3498db;
            --success-color: #2ecc71;
            --warning-color: #f1c40f;
            --danger-color: #e74c3c;
            --light-gray: #f8f9fa;
            --border-radius: 12px;
        }

        body {
            background-color: var(--light-gray);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            color: var(--secondary-color);
            line-height: 1.6;
        }

        .header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }

        .order-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .order-header {
            border-bottom: 2px solid var(--light-gray);
            padding-bottom: 1rem;
            margin-bottom: 1.5rem;
        }

        .order-id {
            color: var(--primary-color);
            font-size: 1.25rem;
            font-weight: 600;
        }

        .payment-method {
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: 500;
            background-color:antiquewhite;
        }

        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .badge-delivered {
            background-color: var(--success-color);
            color: white;
        }

        .badge-pending {
            background-color: var(--warning-color);
            color: var(--secondary-color);
        }

        .order-items {
            background-color: var(--light-gray);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin: 1.5rem 0;
        }

        .item-card {
            background: white;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .item-details {
            flex-grow: 1;
        }

        .item-price {
            font-weight: 600;
            color: var(--primary-color);
            margin-left: 1rem;
        }

        .summary-card {
            background-color: var(--primary-color);
            color: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }

        .summary-total {
            border-top: 2px solid rgba(255, 255, 255, 0.1);
            margin-top: 1rem;
            padding-top: 1rem;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .address-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-top: 1.5rem;
        }

        .btn-custom {
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: var(--accent-color);
            border: none;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

        .btn-danger {
            background-color: var(--danger-color);
            border: none;
        }

        .btn-warning {
            background-color: var(--warning-color);
            border: none;
            color: var(--secondary-color);
        }

        .btn {
        font-size: 0.95rem;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 30px; 
        border: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .shop-more-btn {
        background-color: #28a745; 
        color: white;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .shop-more-btn:hover {
        background-color: #218838;
        transform: translateY(-2px);
    }

    .return-request-btn {
        background-color: #ffc107; 
        color: #343a40; 
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .return-request-btn:hover {
        background-color: #e0a800;
        transform: translateY(-2px);
    }

    .cancel-order-btn {
        background-color: #dc3545;
        color: white;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .cancel-order-btn:hover {
        background-color: #c82333;
        transform: translateY(-2px);
    }
    </style>
</head>
<body>

    <%- include("../../views/partials/user/header") %>
   
    <div class="header" style="margin-top: 20px;">
        <div class="container">
            <h1 class="mb-0">Order Details</h1>
        </div>
    </div>
    <%- include("../../views/partials/user/sidebar") %>

    <div class="container">
        <% if (order) { %>
            <div class="order-card">
                <div class="order-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="order-id">Order #<%= order._id %></span>
                            <p class="text-muted mb-0">Placed on <%= order.createdOn.toDateString() %></p>
                        </div>
                        
                        <span class="status-badge badge-<%= order.status === 'delivered' ? 'delivered' : 'pending' %>">Status:
                            <%= order.status.toUpperCase() %>
                        </span>
                        <span class="payment-method">Payment Method:
                            <%= order.paymentMethod.toUpperCase() %>
                        </span>
                        <span class="status-badge badge-<%= order.paymentStatus === 'completed' ? 'delivered' : 'pending' %>">Payement Status:
                            <%= order.paymentStatus.toUpperCase() %>
                        </span>
                    </div>
                </div>

                <div class="order-items">
                    <h5 class="mb-4">Order Items</h5>
                    <% order.orderedItems.forEach(item => { %>
                        <div class="item-card">
                            <div class="item-details">
                                <h6 class="mb-1"><%= item.product.productName %></h6>
                                <small class="text-muted">Quantity: <%= item.quantity %></small>
                            </div>
                            <span class="item-price">â‚¹<%= item.price * item.quantity %></span>
                        </div>
                    <% }) %>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="address-card">
                            <h5 class="mb-3">Delivery Address</h5>
                            <% if (order.address) { %>
                                <h6 class="mb-2"><%= order.address.name %></h6>
                                <p class="mb-1"><%= order.address.streetName %>, <%= order.address.locality %></p>
                                <p class="mb-1"><%= order.address.city %>, <%= order.address.state %> - <%= order.address.pin %></p>
                                <p class="mb-0">ðŸ“ž <%= order.address.contactNo %></p>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="summary-card">
                            <h5 class="mb-4">Order Summary</h5>
                            <div class="summary-row">
                                <span>Subtotal</span>
                                <span>â‚¹<%= order.totalPrice %></span>
                            </div>
                            <% if (order.discount) { %>
                                <div class="summary-row">
                                    <span>Discount</span>
                                    <span>-â‚¹<%= order.discount %></span>
                                </div>
                            <% } %>
                            <div class="summary-row summary-total">
                                <td colspan="4" class="text-end" style="font-weight: bold;">
                                    <%= order.couponApplied === true? "Final Amount (discount applied):" : "FInal Amount:" %>
                                  </td>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 
                                  <td class="text-end price-column">â‚¹<%= order.finalAmount.toLocaleString() %></td>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>      
                        <% if (order.status && (order.status.toLowerCase() === 'cancelled' || order.status.toLowerCase() === 'return pending' || order.status.toLowerCase() === 'pending' && order.status.toLowerCase() === 'Returned' )) { %>
                            <button id="product-btn" class="btn shop-more-btn">
                                <a href="/products" style="color: inherit; text-decoration: none;">Shop More</a>
                            </button>
                        <% } else if (order.status && order.status.toLowerCase() === 'delivered') { %>
                            <button id="return-request-btn" class="btn return-request-btn"> <a href="/return-order-page/<%=order._id%>">Return Request</a></button>
                        <% } else if(order.status && order.status.toLowerCase() !== 'Returned') { %>
                            <button id="cancel-order-btn" class="btn cancel-order-btn"><a href="/cancel-order-page/<%=order._id%>">Cancel Order</a></button>
                        <% } else { %>
                            <button id="cancel-order-btn" class="btn cancel-order-btn"><a href="/cancel-order-page/<%=order._id%>">Cancel Order</a></button>
                        <% } %>
                    </div>

                    
                    <div>
                        <% if (order.paymentStatus.toLowerCase() === 'pending') { %>
                            <a href="/continue-payment/<%= order._id %>" class="btn btn-primary btn-custom">Continue Payment</a>
                        <% } else { %>
                            <a href="/download-invoice/<%= order._id %>" class="btn btn-primary btn-custom">Download Invoice</a>
                        <% } %>
                        <a href="/orders-list" class="btn btn-custom btn-outline-secondary ms-2">Back to Orders</a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-warning">Order not found.</div>
        <% } %>
    </div>

    <div id="cancelOrderModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cancel Order</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to cancel this order?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="confirm-cancel">Confirm Cancellation</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

  

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>





const addressId = $("input[name='address']:checked").val(); 
if (!addressId) {
    Swal.fire('Error', 'Please select an address.', 'error');
    return;
}

$.ajax({
    url: `/continue-payment/${orderId}`,
    method: "POST",
    data: { addressId: addressId },
    success: function (response) {
        console.log(response,data);
    },
    error: function (error) {
        Swal.fire('Error', error.responseJSON.message, 'error');
    }
});



//payment

   document.addEventListener("DOMContentLoaded", function () {
    document.querySelector(".btn-primary").addEventListener("click", function (e) {
        e.preventDefault();  

        const orderId = "<%= order._id %>"; 
        
        fetch(`/continue-payment/${orderId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error("Failed to initiate payment");
            }
            return response.json();
        })
        .then(data => {
            const options = {
                key: data.key_id,  
                amount: data.amount,  
                currency: data.currency,
                name: 'Your Shop Name',
                description: 'Order Payment',
                order_id: data.order_id,  
                handler: function (response) {
                   
                    fetch('/payment-success', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            order_id: orderId,
                            payment_id: response.razorpay_payment_id,
                            signature: response.razorpay_signature
                        })
                    })
                    .then(successResponse => successResponse.json())
                    .then(successData => {
                        if (successData.success) {
                            location.reload();  
                        } else {
                            Swal.fire('Error', 'Payment failed. Please try again.', 'error');
                        }
                    })
                    .catch(error => {
                        Swal.fire('Error', 'Something went wrong. Please try again.', 'error');
                        console.error(error);
                    });
                },
                theme: {
                    color: '#3399cc'
                }
            };

            const rzp1 = new Razorpay(options);
            rzp1.open();  
        })
        .catch(error => {
            Swal.fire('Error', error.message, 'error');
            console.error(error);
        });
    });
});

</script>




</body>
</html>