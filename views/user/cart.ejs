<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom Styling */
        .cart-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .btn-maroon {
            background-color: #800000;
            color: white;
        }
        .btn-maroon:hover {
            background-color: #a00000;
        }
        .main-content {
            display: flex;
            margin-top: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="main-content">
        <!-- Sidebar Navigation -->
        <%- include("../../views/partials/user/sidebar") %>

        <!-- Cart Container -->
        <div class="cart-container flex-grow-1">
            <h3 class="text-center mb-4">Your Shopping Cart</h3>
            
            <% if (message) { %>
                <div class="alert alert-warning" role="alert">
                    <%= message %>
                </div>
            <% } else { %>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cart.forEach(item => { %>
                        <tr>
                            <td><%= item.productId.name %></td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td>
                                <input type="number" class="form-control quantity-input" min="1" value="<%= item.quantity %>" data-id="<%= item.productId._id %>">
                            </td>
                            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                            <td>
                                <button class="btn btn-sm btn-danger remove-btn" data-id="<%= item.productId._id %>">Remove</button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                
                <div class="d-flex justify-content-between">
                    <h5>Total Amount: $<span id="totalAmount"><%= cart.reduce((total, item) => total + (item.price * item.quantity), 0).toFixed(2) %></span></h5>
                    <a href="/checkout" class="btn btn-maroon">Proceed to Checkout</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Optional JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function() {
        // Update quantity and total when quantity is changed
        $('.quantity-input').on('change', function() {
            const newQty = $(this).val();
            const productId = $(this).data('id');

            $.ajax({
                url: '/cart/update', 
                method: 'POST',
                data: { productId: productId, quantity: newQty },
                success: function(response) {
                    $('#totalAmount').text(response.cartTotal.toFixed(2));
                },
                error: function(err) {
                    console.log(err);
                }
            });
        });

        // Remove item from cart
        $('.remove-btn').on('click', function() {
            const productId = $(this).data('id');

            $.ajax({
                url: '/cart/remove',
                method: 'POST',
                data: { productId: productId },
                success: function(response) {
                    location.reload();
                },
                error: function(err) {
                    console.log(err);
                }
            });
        });
    });
</script>

</body>
</html>
