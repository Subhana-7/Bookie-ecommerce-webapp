
<%- include("../../views/partials/user/header") %>
<title>Shopping Cart</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    .cart-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-maroon {
        background-color: #800000;
        color: white;
    }
    .btn-maroon:hover {
        background-color: #a00000;
    }
    .main-content {
        display: flex;
        margin-top: 20px;
    }
</style>

<body>
<div class="container">
    <div class="main-content">
        <%- include("../../views/partials/user/sidebar") %>

        <div class="cart-container flex-grow-1">
            <h3 class="text-center mb-4">Your Shopping Cart</h3>
            
            <% if (message) { %>
                <div class="alert alert-warning" role="alert">
                    <%= message %>
                </div>
            <% } else { %>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cart.forEach(item => { %>
                        <tr>
                            <td>
                                
                                <%= item.productId.productName %>
                            </td>
                            <td>₹<%= item.price.toFixed(2) %></td>
                            <td>
                                <input type="number" class="form-control quantity-input" min="1" max="12" value="<%= item.quantity %>" data-id="<%= item.productId._id %>">
                            </td>
                            <td>₹<%= (item.price * item.quantity).toFixed(2) %></td>
                            <td>
                                <button class="btn btn-sm btn-danger remove-btn" data-id="<%= item.productId._id %>">Remove</button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                
                <div class="d-flex justify-content-between">
                    <h5>Total Items: <span id="totalItems"><%= cart.reduce((total, item) => total + item.quantity, 0) %></span></h5>
                    <h5>Total Amount: ₹<span id="totalAmount"><%= cart.reduce((total, item) => total + (item.price * item.quantity), 0).toFixed(2) %></span></h5>
                 
                </div>

                <div class="d-flex justify-content-center my-4">
                    <button class="btn btn-success">
                        <a href="/order" class="text-white text-decoration-none d-inline-block px-3 py-2">Proceed to Checkout</a>
                    </button>
                </div>
                
                
            <% } %>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
$(document).ready(function() {
    $('.quantity-input').on('change', function() {
        const newQty = $(this).val();
        const productId = $(this).data('id');
        const row = $(this).closest('tr'); 
        const inputElement = $(this); 

        if (newQty > 12) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Quantity cannot exceed 12!',
            });
            inputElement.val(12); 
            return;
        }

        $.ajax({
            url: '/cart/update', 
            method: 'POST',
            data: { productId: productId, quantity: newQty },
            success: function(response) {
                const price = parseFloat(row.find('td:nth-child(2)').text().replace('₹', ''));
                const newRowTotal = (price * newQty).toFixed(2);
                row.find('td:nth-child(4)').text(`₹${newRowTotal}`);
                $('#totalAmount').text(response.cartTotal.toFixed(2));
                $('#totalItems').text(response.totalItems); // Update total items dynamically

                Swal.fire({
                    icon: 'success',
                    title: 'Updated!',
                    text: 'Quantity updated successfully!',
                });
            },
            error: function(err) {
                if (err.responseJSON && err.responseJSON.message.includes("stock")) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Insufficient Stock',
                        text: err.responseJSON.message,
                    });
                    inputElement.val(err.responseJSON.availableStock);
                } else {
                    console.log(err);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Failed to update quantity.',
                    });
                }
            }
        });
    });

    $('.remove-btn').on('click', function() {
        const productId = $(this).data('id');
        
        $.ajax({
            url: '/cart/remove',
            method: 'POST',
            data: { productId: productId },
            success: function(response) {
                Swal.fire({
                    icon: 'success',
                    title: 'Removed!',
                    text: 'Item removed from cart successfully!',
                }).then(() => {
                    location.reload(); 
                });
            },
            error: function(err) {
                console.log(err);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to remove item.',
                });
            }
        });
    });
});


</script>

</body>
</html>
