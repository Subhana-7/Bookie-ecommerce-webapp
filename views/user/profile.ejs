<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Maroon Theme */
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }
        .profile-header {
            background-color: rgb(255, 255, 255);
            color: #ed3939;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
        }
        .profile-container {
            display: flex;
            gap: 20px;
            margin-top: 20px;
            min-height: 70vh;
        }
        .sidebar {
            width: 250px;
            background-color: #f5f5f5;
            padding: 15px;
            border-radius: 8px;
            position: sticky;
            top: 20px;
            height: 100vh;
        }
        .sidebar .nav-link {
            color: #333;
            font-weight: 500;
        }
        .sidebar .nav-link.active {
            background-color: #800000;
            color: #fff;
            border-radius: 5px;
        }
        .profile-content {
            flex-grow: 1;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #ddd;
            min-height: 500px; /* Fixed height for profile details container */
        }
        .address-content {
            width: 250px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #ddd;
            height: fit-content;
        }
        .btn-maroon {
            background-color: #800000 !important;
            color: #fff !important;
            border: none;
        }
        .btn-maroon:hover {
            background-color: #a00000 !important;
        }
        .table thead {
            background-color: #800000;
            color: #fff;
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Profile Header -->
    <div class="profile-header">
        <h2>User Profile</h2>
        <p>Manage your profile details, orders, and settings</p>
    </div>

    <div class="profile-container">
        <!-- Sidebar Navigation -->
        <div class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" id="details-tab" data-toggle="tab" href="#details" role="tab">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="cart-tab" href="#cart">Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="wishlist-tab" href="#wishlist">Wishlist</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="orders-tab" href="#orders" role="tab">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="settings-tab" href="#settings" role="tab">Settings</a>
                </li>
            </ul>
        </div>

        <!-- Profile Content -->
        <div class="profile-content tab-content" id="profileTabsContent">
            <!-- Profile Details Tab -->
            <div class="tab-pane fade show active" id="details" role="tabpanel">
                <h4>User Information</h4>
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phone %></p>
                <button class="btn btn-maroon mt-3">
                    <a class="text-white" href="/edit-profile">Edit Profile</a>
                </button>
            </div>
        </div>

        <!-- Address Content -->
<!-- Address Content -->
<div class="address-content">
    
    <% if (address && address.length > 0) { %>
        <% address.forEach(addr => { %>
            <h4>Address</h4>
            <div class="address-block">
                <p><strong>Type:</strong> <%= addr.addressType %></p>
                <p><strong>Name:</strong> <%= addr.name %></p>
                <p><strong>City:</strong> <%= addr.city %></p>
                <p><strong>Landmark:</strong> <%= addr.landMark %></p>
                <p><strong>State:</strong> <%= addr.state %></p>
                <p><strong>Zip Code:</strong> <%= addr.pincode %></p>
                <p><strong>Phone:</strong> <%= addr.phone %></p>
                <p><strong>Alt Phone:</strong> <%= addr.altPhone %></p>
                <hr>
            </div>
        <% }) %>
    <% } else { %>
        <p>No address available. Please add an address.</p>
    <% } %>
    <button class="btn btn-maroon mt-3">
        <a href="/add-address" style="color: white; text-decoration: none;">Add Address</a>
    </button>
    <button class="btn btn-maroon mt-2">
        <a href="/edit-address" style="color: white; text-decoration: none;">Edit Address</a>
    </button>
</div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
