<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        .profile-card {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
        }
        .profile-card:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .maroon-gradient {
            background: linear-gradient(135deg, #632323 0%, #a43e3e 100%);
        }
        .btn-maroon {
            background: #800000;
            transition: all 0.3s ease;
        }
        .btn-maroon:hover {
            background: #A52A2A;
            transform: translateY(-1px);
        }
        .referral-card {
            background: linear-gradient(135deg, #f6f8ff 0%, #f1f4ff 100%);
            border: 2px dashed #4e73df;
        }


    </style>
</head>
<body class="bg-gray-50">
    <%- include("../../views/partials/user/header")%>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Profile Header -->
        <div class="maroon-gradient rounded-lg p-8 mb-8 text-white">
            <div class="flex items-center space-x-4">
                <div>
                    <h1 class="text-3xl font-bold">User Profile</h1>
                    <p class="text-gray-200">Manage your profile details, orders, and settings</p>
                </div>
            </div>
        </div>

        <div class="flex flex-col md:flex-row gap-8" >
            <!-- Sidebar -->
            <%- include("../../views/partials/user/sidebar") %>

            <!-- Main Content -->
            <div class="flex-1 space-y-8">
                <!-- User Info Card -->
                <div class="profile-card rounded-lg p-6" style="margin-left:20px; background-color: #f1f4ff;">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-semibold text-gray-800">Personal Information</h2>
                        <a href="/edit-profile" class="btn-maroon text-white px-4 py-2 rounded-lg inline-flex items-center" style="text-decoration: none;"> 
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Edit Profile
                        </a>
                    </div>
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="space-y-3">
                            <div class="flex items-center">
                                <span class="text-gray-600 w-24">Name:</span>
                                <span class="font-medium"><%= user.name %></span>
                            </div>
                            <div class="flex items-center">
                                <span class="text-gray-600 w-24">Email:</span>
                                <span class="font-medium"><%= user.email %></span>
                            </div>
                            <div class="flex items-center">
                                <span class="text-gray-600 w-24">Phone:</span>
                                <span class="font-medium"><%= user.phone %></span>
                            </div>
                        </div>
                        
                        <!-- Referral Code Card -->
                        <div class="referral-card rounded-lg p-4 flex flex-col justify-center items-center">
                            <span class="text-gray-600 mb-2">Your Referral Code</span>
                            <div class="text-2xl font-bold text-blue-600 mb-2"><%= user.referalCode %></div>
                            <button class="text-blue-600 hover:text-blue-800 text-sm flex items-center" onclick="copyReferralCode()">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
                                </svg>
                                Copy Code
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Address Card -->
                <div class="profile-card rounded-lg p-6" style="margin-left:20px; background-color: #ffffff;">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-semibold text-gray-800">Addresses</h2>
                        <a href="/add-address" class="btn-maroon text-white px-4 py-2 rounded-lg inline-flex items-center" style="text-decoration: none;">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Add New Address
                        </a>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6" style="background-color: rgb(255, 255, 255);">
                        <% if (address && address.length > 0) { %>
                            <% address.forEach(addr => { %>
                                <div class="border rounded-lg p-4 relative hover:border-maroon transition-colors" style="background-color: rgb(221, 221, 221);">
                                    <div class="absolute top-4 right-4 space-x-2">
                                        <a href="/edit-address/<%= addr._id %>" class="text-blue-600 hover:text-blue-800">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>
                                        <button onclick="confirmDelete('<%= addr._id %>')" class="text-red-600 hover:text-red-800">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </div>
                                    <span class="inline-block px-2 py-1 text-sm text-white bg-gray-600 rounded mb-3"><%= addr.addressType %></span>
                                    <p class="font-medium text-lg mb-2"><%= addr.name %></p>
                                    <div class="space-y-1 text-gray-600">
                                        <p><%= addr.streetName %></p>
                                        <p><%= addr.landmark %></p>
                                        <p><%= addr.locality %>, <%= addr.city %></p>
                                        <p><%= addr.state %> - <%= addr.pin %></p>
                                        <p class="text-sm">ðŸ“ž <%= addr.contactNo %></p>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="col-span-2 text-center py-8 bg-gray-50 rounded-lg">
                                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                </svg>
                                <p class="text-gray-600">No address available. Please add an address.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        function confirmDelete(addressId) {
            Swal.fire({
                title: 'Delete Address?',
                text: "This action cannot be undone",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#800000',
                cancelButtonColor: '#718096',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                customClass: {
                    confirmButton: 'btn-maroon'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/delete-address/' + addressId, {
                        method: 'DELETE'
                    })
                    .then(response => response.json())
                    .then(data => {
                        Swal.fire({
                            title: 'Deleted!',
                            text: 'Address has been removed',
                            icon: 'success',
                            confirmButtonColor: '#800000'
                        }).then(() => {
                            location.reload();
                        });
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'Error!',
                            text: 'Failed to delete address',
                            icon: 'error',
                            confirmButtonColor: '#800000'
                        });
                    });
                }
            });
        }

        function copyReferralCode() {
            const code = '<%= user.referalCode %>';
            navigator.clipboard.writeText(code).then(() => {
                Swal.fire({
                    title: 'Copied!',
                    text: 'Referral code copied to clipboard',
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 1500,
                    position: 'top-end',
                    toast: true
                });
            });
        }
    </script>
</body>
</html>