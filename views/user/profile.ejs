
    <title>User Profile</title>
    
    <style>
        /* Maroon Theme */
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }
        .profile-header {
            background-color: rgb(255, 255, 255);
            color: #ed3939;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
        }
        .profile-container {
            display: flex;
            gap: 20px;
            margin-top: 20px;
            min-height: 70vh;
        }
       
        .profile-content {
            flex-grow: 1;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #ddd;
            min-height: 500px; /* Fixed height for profile details container */
        }
        .address-content {
            width: 250px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #ddd;
            height: fit-content;
        }
        .btn-maroon {
            background-color: #800000 !important;
            color: #fff !important;
            border: none;
        }
        .btn-maroon:hover {
            background-color: #a00000 !important;
        }
        .table thead {
            background-color: #800000;
            color: #fff;
        }
        .referral-code {
        font-size: 1.2em;
        font-weight: bold;
        color: #4e73df; /* Blue color */
        background-color: #f8f9fc; /* Light background */
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 300px;
        margin: 20px auto;
        }

    </style>
    <%-include("../../views/partials/user/header")%>


<div class="container">
    <!-- Profile Header -->
    <div class="profile-header">
        <h2>User Profile</h2>
        <p>Manage your profile details, orders, and settings</p>
    </div>

    <div class="profile-container">
        <!-- Sidebar Navigation -->
    <%- include("../../views/partials/user/sidebar") %>

        <!-- Profile Content -->
        <div class="profile-content tab-content" id="profileTabsContent">
            <!-- Profile Details Tab -->
            <div class="tab-pane fade show active" id="details" role="tabpanel">
                <h4>User Information</h4>
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phone %></p>
                <button class="btn btn-maroon mt-3">
                    <a class="text-white" href="/edit-profile">Edit Profile</a>
                </button>
                <br><br>
                <p class="referral-code">
                    <strong>Your Referral Code:</strong> <%= user.referalCode %>
                  </p>                  
            </div>
        </div>

        <!-- Address Content -->
<!-- Address Content -->
<div class="address-content">
    <button class="btn btn-maroon mt-3">
        <a href="/add-address" style="color: white; text-decoration: none;">Add Address</a>
    </button><br><hr>

    <% if (address && address.length > 0) { %>
        <% address.forEach(addr => { %>
            <h4>Address</h4>
            <div class="address-block">
                <p><strong>Type:</strong> <%= addr.addressType %></p>
                <p><strong>Name:</strong> <%= addr.name %></p>
                <p><strong>Street Name:</strong> <%= addr.streetName %></p>
                <p><strong>Landmark:</strong> <%= addr.landMark %></p>
                <p><strong>Locality:</strong> <%= addr.locality %></p>
                <p><strong>City:</strong> <%= addr.city %></p>
                <p><strong>State:</strong> <%= addr.state %></p>
                <p><strong>Pin Code:</strong> <%= addr.pin %></p>
                <p><strong>Phone:</strong> <%= addr.contactNo %></p>
                <button class="btn btn-maroon mt-2">
                    <a href="/edit-address/<%= addr._id %>" style="color: white; text-decoration: none;">Edit Address</a>
                </button>
                <button class="btn btn-maroon mt-2" onclick="confirmDelete('<%= addr._id %>')">Delete Address</button>
                <hr>
            </div>
        <% }) %>
    <% } else { %>
        <p>No address available. Please add an address.</p>
    <% } %>
</div>


    </div>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    function confirmDelete(addressId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This address will be deleted!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#800000',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/delete-address/' + addressId,
                    type: 'DELETE',
                    success: function(response) {
                        Swal.fire(
                            'Deleted!',
                            'Your address has been deleted.',
                            'success'
                        ).then(() => {
                            location.reload(); 
                        });
                    },
                    error: function(err) {
                        Swal.fire(
                            'Error!',
                            'There was an error deleting the address.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>

