<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Confirmation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    .order-confirmation {
      max-width: 800px;
      margin: 50px auto;
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .order-confirmation h2 {
      color: #28a745;
      font-weight: bold;
    }
    .order-summary, .address-box {
      background-color: #f9f9f9;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    .table td, .table th {
      vertical-align: middle;
    }
  </style>
</head>
<body>
  <%-include("../../views/partials/user/header")%>

<div class="container order-confirmation text-center">
  <h2>Your Order Has Been Placed</h2>
<% if (order.paymentMethod === 'Cash On Delivery') { %>
  <h4>Thank you for choosing Cash On Delivery!</h4>
<% } else if (order.paymentMethod === 'Razorpay') { %>
  <h4>Thank you for choosing Online Payment!</h4>
<% } else { %>
  <h4>Thank you for your purchase!</h4>
<% } %>


  <div class="order-summary">
    <h5>Order Summary</h5>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Item</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% order.orderedItems.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.product.productName %></td>
            <td>₹<%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>₹<%= item.price * item.quantity %></td>
          </tr>
        <% }) %>
        <tr>
          <td colspan="4" class="text-end"><strong>Total:</strong></td>
          <td>₹<%= order.totalPrice %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="address-box text-start">
    <h5>Shipping Address</h5>
    <% if (order.address) { %>
      <p><strong><%= order.address.name %></strong></p>
      <p><%= order.address.streetName %>, <%= order.address.landmark %>, <%= order.address.locality %></p>
      <p><%= order.address.city %>, <%= order.address.state %>, <%= order.address.pin %></p>
      <p>Contact No: <%= order.address.contactNo %></p>
    <% } else { %>
      <p>No address information available.</p>
    <% } %>
  </div>

  <div class="d-flex justify-content-between">
    <a href="/products" class="btn btn-secondary">Shop More</a>
    <a href="/orders-list" class="btn btn-primary">View Orders</a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
