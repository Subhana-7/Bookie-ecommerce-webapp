<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Sidebar Styles */
    .sidebar {
      background-color: maroon;
      color: white;
      padding: 20px;
      height: 100vh; /* Full height sidebar */
    }

    .product-card {
      height: 100%; /* Ensure all cards have the same height */
    }

    /* Search Bar Styles */
    .search-bar {
      margin-bottom: 20px;
    }

    .search-input {
      width: 100%;
    }

    /* Adjust for consistent card heights */
    .card-body {
      display: flex;
      flex-direction: column;
      justify-content: space-between; /* Space out title, text, and price */
    }
  </style>
</head>

<%- include("../../views/partials/user/header") %>
<div class="container">
  <nav class="breadcrumbs">
    <a href="/">Home</a> &gt; <span>Products</span>
  </nav>

  <div class="content row">
    <aside class="sidebar col-md-3">
      <h2>Filter & Sort</h2>
      <div class="filter-section">
        <h3>Sort By</h3>
        <select id="sortOptions" class="form-control">
            <option value="default">Default</option>
            <option value="popularity">Popularity</option>
            <option value="priceAsc">Price: Low to High</option>
            <option value="priceDesc">Price: High to Low</option>
            <option value="averageRating">Average Ratings</option>
            <option value="featured">Featured</option>
            <option value="newest">Newest Arrivals</option>
            <option value="aToZ">A - Z</option>
            <option value="zToA">Z - A</option>
        </select>
    </div>
    

    <div class="filter-section">
      <h3>Categories</h3>
      <ul class="list-unstyled">
        <li>
          <input type="checkbox" id="in-stock" onchange="applyFilters()" <%= inStock ? 'checked' : '' %> />
          <label for="in-stock">Show only in-stock Books</label>
        </li>
        <% categories.forEach(category => { %>
          <li>
            <input 
              type="checkbox" 
              id="category-<%= category.name %>" 
              onchange="applyFilters()" 
              <% if (categoryFilter && categoryFilter.split(',').includes(category.name)) { %> checked <% } %>
            />
            <label for="category-<%= category.name %>"><%= category.name %></label>
          </li>
        <% }) %>
      </ul>
    </div>
       

    
    </aside>

    <main class="product-list col-md-9">
      <h2>Product List</h2>
      <!-- Search Bar -->

    <div class="search-bar d-flex">
      <input
        type="text"
        placeholder="Search products..."
        class="form-control search-input"
        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
      />
      <button class="btn btn-primary ml-2 search-btn">Search</button>
    </div>

      

      <div class="row">
        <% products.forEach(product => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <a href="/product-details/<%= product._id %>">
            <div class="product-card card">
              <img src="uploads/product-images/<%= product.productImage[0] %>" class="card-img-top" alt="<%= product.productName %>" />
              <div class="card-body">
                <h3 class="card-title"><%= product.productName %></h3>
                <p class="card-text">Author: <%= product.author %></p>
                <p class="card-text">Publisher: <%= product.publisher %></p>

                <p>
                  Stock Status: 
                  <% if (product.quantity <= 0) { %>
                      <span style="color: red;">Out of Stock</span>
                  <% } else { %>
                      <span style="color: green;" ><%=product.quantity%> Stock left</span><br>
                      <span style="color: green;">-In Stock</span>
                  <% } %>
              </p>
                <p class="price">â‚¹<%= product.salePrice %></p>
                <p> 
                  <% if (product.productOffer) { %>
                    Discound:
                      <span style="color: red;"><%= product.productOffer %>%</span>
                  <% }
                  %>
              </p>

              </div>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
    </main>
  </div>
</div>

<script>
document.querySelector('.search-btn').addEventListener('click', function() {
  const searchValue = document.querySelector('.search-input').value.trim();
  
  if (!searchValue) {
    window.location.href = `/products`; 
  } else {
    window.location.href = `/products?search=${encodeURIComponent(searchValue)}`;
  }
});


document.getElementById('sortOptions').addEventListener('change', function() {
    const sortValue = this.value;

    if (sortValue === 'default') {
        // Reload the page without any sort query to display all products
        window.location.href = '/products';
    } else {
        // Apply sorting by redirecting with the sort query parameter
        window.location.href = `/products?sort=${sortValue}`;
    }
});


    

function applyFilters() {
  let filters = new URLSearchParams();

  // Check if 'in-stock' filter is checked
  const inStockChecked = document.getElementById('in-stock').checked;
  filters.set('inStock', inStockChecked ? 'true' : 'false');

  // Loop through all category checkboxes and add selected category ObjectIds to filters
  const categoryCheckboxes = document.querySelectorAll('input[type="checkbox"][id^="category-"]'); // Select all category checkboxes
  categoryCheckboxes.forEach((checkbox) => {
    if (checkbox.checked) {
      filters.append('category', checkbox.value); // Make sure category checkboxes use category _id as the value
    }
  });

  // Redirect with the applied filters
  window.location.href = '/products?' + filters.toString();
}

    

</script>