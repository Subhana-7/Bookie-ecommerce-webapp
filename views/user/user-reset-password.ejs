<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="reset-password-container mt-5">
            <h3 class="text-center mb-4">Reset Password</h3>
            
            <div id="emailStep">
                <form id="emailForm">
                    <div class="form-group">
                        <label for="email">Enter your email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Send OTP</button>
                </form>
            </div>

            <div id="otpStep" style="display: none;">
                <form id="otpForm">
                    <div class="form-group">
                        <label for="otp">Enter OTP:</label>
                        <input type="text" class="form-control" id="otp" name="otp" required maxlength="6">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Verify OTP</button>
                </form>
            </div>

            <div id="passwordStep" style="display: none;">
                <form id="passwordForm">
                    <div class="form-group">
                        <label for="newPassword">New Password:</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                        <div id="passwordError" class="invalid-feedback">Password must be at least 8 characters long, contain one uppercase letter, one lowercase letter, and one number.</div>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password:</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        <div id="confirmPasswordError" class="invalid-feedback">Passwords do not match.</div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let userEmail = '';

        // Step 1: Send OTP
        $("#emailForm").on("submit", function (e) {
            e.preventDefault();
            userEmail = $("#email").val();
            
            $.ajax({
                url: "/send-reset-password-otp",
                method: "POST",
                data: { email: userEmail },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response.message
                        }).then(() => {
                            $("#emailStep").hide();
                            $("#otpStep").show();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to send OTP. Please try again.'
                    });
                }
            });
        });

        // Step 2: Verify OTP
        $("#otpForm").on("submit", function (e) {
            e.preventDefault();
            const otp = $("#otp").val();
            
            $.ajax({
                url: "/verify-reset-password-otp",
                method: "POST",
                data: { 
                    email: userEmail,
                    otp: otp 
                },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response.message
                        }).then(() => {
                            $("#otpStep").hide();
                            $("#passwordStep").show();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to verify OTP. Please try again.'
                    });
                }
            });
        });

        // Step 3: Reset Password
        $("#passwordForm").on("submit", function (e) {
            e.preventDefault();
            const newPassword = $("#newPassword").val();
            const confirmPassword = $("#confirmPassword").val();

            // Validate password criteria
            const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{8,}$/;
            if (!passwordPattern.test(newPassword)) {
                $("#newPassword").addClass('is-invalid');
                return;
            } else {
                $("#newPassword").removeClass('is-invalid');
            }

            // Validate password match
            if (newPassword !== confirmPassword) {
                $("#confirmPassword").addClass('is-invalid');
                return;
            } else {
                $("#confirmPassword").removeClass('is-invalid');
            }

            // Proceed with password reset if validation passes
            $.ajax({
                url: "/reset-password",
                method: "POST",
                data: { 
                    email: userEmail,
                    newPassword: newPassword 
                },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response.message
                        }).then(() => {
                            window.location.href = "/login";
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to reset password. Please try again.'
                    });
                }
            });
        });

        // Remove error class on user input
        $("#newPassword, #confirmPassword").on('input', function() {
            if ($(this).val()) {
                $(this).removeClass('is-invalid');
            }
        });
    </script>
</body>
</html>
