<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Return Order</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body {
            font-family: 'Segoe UI', system-ui, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }
        .card {
            border-radius: 12px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-return {
            background-color: #28a745;
            color: white;
            border-radius: 30px;
            font-size: 1rem;
            padding: 10px 20px;
        }
        .btn-return:hover {
            background-color: #218838;
        }
        .btn-back {
            background-color: #6c757d;
            color: white;
            border-radius: 30px;
            font-size: 1rem;
            padding: 10px 20px;
        }
        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5>Return Order</h5>
        </div>
        <div class="card-body">
            <h6>Order Details</h6>
            <p><strong>Order ID:</strong> <%= order._id %></p>
            <p><strong>Order Date:</strong> <%= order.createdOn.toDateString() %></p>
            <p><strong>Items:</strong></p>
            <ul>
                <% order.orderedItems.forEach(item => { %>
                    <li>
                        <strong><%= item.product.productName %></strong> - Quantity: <%= item.quantity %> 
                        (<strong>Price:</strong> ₹<%= item.price * item.quantity %>)
                    </li>
                <% }) %>
            </ul>

            <h6>Total Amount</h6>
            <p><strong>₹<%= order.finalAmount %></strong></p>

            <hr>

            <h6>Reason for Return</h6>
            <div class="form-group">
                <input type="text" id="returnReason" class="form-control" placeholder="Enter your reason for return" />
            </div>

            <div class="d-flex justify-content-between">
                <a href="/orders-list" class="btn btn-back">Back to Orders</a>
                <button id="confirmReturn" class="btn btn-return" data-order-id="<%= order._id %>">Confirm Return</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        $('#confirmReturn').on('click', function () {
            const orderId = $(this).data('order-id');
            const reason = $('#returnReason').val().trim();

            if (!reason) {
                Swal.fire('Error', 'Please provide a reason for return.', 'error');
                return;
            }

            Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to undo this action!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, return it!',
                cancelButtonText: 'No, keep it'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/return-order/${orderId}`,
                        method: 'POST',
                        data: { reason },
                        success: function () {
                            Swal.fire('Returned!', 'Your order has been successfully returned.', 'success')
                                .then(() => {
                                    window.location.href = '/orders-list';
                                });
                        },
                        error: function () {
                            Swal.fire('Error!', 'Something went wrong. Please try again.', 'error');
                        }
                    });
                }
            });
        });
    });
</script>

</body>
</html>
