<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <div class="otp-verification-container mt-5">
        <h3 class="text-center">Verify OTP</h3>
        <form id="otpForm">
            <div class="form-group">
                <label for="otp">Enter OTP:</label>
                <input type="text" class="form-control" id="otp" name="otp" required maxlength="6" pattern="\d*">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Verify OTP</button>
            <button type="button" id="resendOTP" class="btn btn-secondary btn-block">Resend OTP</button>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $("#otpForm").on("submit", function (e) {
        e.preventDefault();
        const otp = $("#otp").val();

        $.post("/verify-reset-password-otp", { otp, email: localStorage.getItem("email") }, function (response) {
            if (response.success) {
                Swal.fire("Success", response.message, "success").then(() => {
                    window.location.href = "/reset-password"; // Redirect to reset password page
                });
            } else {
                Swal.fire("Error", response.message, "error");
            }
        }).fail(() => {
            Swal.fire("Error", "Invalid OTP or expired. Please try again.", "error");
        });
    });

    $("#resendOTP").on("click", function () {
        const email = localStorage.getItem("email");

        $.post("/send-reset-password-otp", { email }, function (response) {
            if (response.success) {
                Swal.fire("Success", "OTP resent successfully!", "success");
            } else {
                Swal.fire("Error", response.message, "error");
            }
        }).fail(() => {
            Swal.fire("Error", "Failed to resend OTP. Please try again.", "error");
        });
    });
</script>
</body>
</html>
