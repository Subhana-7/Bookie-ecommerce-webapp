<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <span class="brand-main">Bookie</span>
            </a>
            <div class="d-flex flex-column align-items-center mx-auto">
                <span class="tagline">Books are Knowledge, it takes you to worlds you don't know</span>
            </div>
            <div class="d-flex ms-auto">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/products">Products</a>
                <a class="nav-link" href="/wishlist">Wishlist</a>
                <a class="nav-link" href="/cart">
                    Cart
                    <span id="cart-badge" class="badge badge-pill badge-danger">0</span>
                </a>
                <a class="nav-link" href="/profile">Profile</a>
            </div>
        </div>
    </nav>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch('/cart/item-count')
                .then(response => response.json())
                .then(data => {
                    const cartBadge = document.getElementById("cart-badge");
                    if (data.totalItems > 0) {
                        cartBadge.textContent = data.totalItems;
                    } else {
                        cartBadge.style.display = "none";
                    }
                })
                .catch(error => console.error('Error fetching cart item count:', error));
        });

    </script>



